generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("MONOCONICS_SQLITE_DATABASE_URL")
}

model Dataset {
    id            String  @id @default(uuid())
    taskId        String
    name          String  @unique
    description   String
    data          Data[]
    params        String
}

model Data {
    id          String  @id @default(uuid())
    date        DateTime
    dataset     Dataset @relation(fields: [datasetId], references: [id])
    datasetId   String
    name        String
    mimeType    String
    items       String
    params      String
    status      String
}
