generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Dataset {
    id            String  @id @default(uuid())
    name          String  @unique
    description   String
    taskId        String
    data          Data[]
    params        Json
}

model Data {
    id          String  @id @default(uuid())
    date        DateTime
    dataset     Dataset @relation(fields: [datasetId], references: [id])
    datasetId   String
    name        String
    mimeType    String
    items       Json
    params      Json
    status      String
}
